@model EXPERMIN.WEB.Models.Portal.PortalViewModel
@{
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
}
@section Styles {
    <link href="~/assets/css/owl_carousel/owl.carousel.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/views/portal/index.css" rel="stylesheet" asp-append-version="true" />
}


<!------------------------------------------------------------ INICIO: BANNER ------------------------------------------------------------>
@if (Model.Banner != null && Model.Banner.Count() > 0)
{
    <section>
        <div id="carouselExampleIndicators" class="carousel slide m-main-carousel" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-overlay"></div>

                @{
                    var count = 1;
                }
                @foreach (var item in Model.Banner.OrderBy(i => i.Order))
                {
                    <div class="carousel-item @(count == 1 ? "active" : string.Empty)">
                        <img class="img-fluid d-block w-100" src="@item.Image.FullUrl" alt="@item.Headline" slide />
                        <div class="carousel-caption">
                            <div class="carousel-caption-container">
                                <div class="row">
                                    <div class="col-12 col-md-6" style="margin:auto;text-align:center">
                                        <div class="inner-parallax">
                                            <div class="" style="text-align:center">
                                                <h1 style="color:beige;">@item.Headline</h1>
                                                <div class="text-center">
                                                    <a class="btn btn-lg btn-lc-gold m-btn--pill" target="_blank" href="@(item.RouteType? item.UrlDirection: $"//{item.UrlDirection}")"> @item.NameDirection</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <span class="order m--hide">@count</span>
                        </div>
                    </div>
                    count++;
                }
            </div>
            <div class="m-container m-container--responsive m-container--xxl m-page__container" style="position: absolute; z-index: 9998;">
                <a class="btn btn-secondary banner btn-slider-prev m-btn--icon-only prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <i class="fas fa-angle-left"></i>
                </a>
                <a class="btn btn-secondary banner btn-slider-next m-btn--icon-only next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <i class="fas fa-angle-right"></i>
                </a>
            </div>
        </div>
    </section>
}

<!------------------------------------------------------------ FIN: BANNER ------------------------------------------------------------>
<!------------------------------------------------------------ INICIO: PRODUCTOS ------------------------------------------------------------>
<div id="products" style="background-color:#e8e3d926;">
    <div class="loading">Cargando productos...</div>
</div>


<!------------------------------------------------------------ FIN: PRODUCTOS ------------------------------------------------------------>

<!------------------------------------------------------------ INICIO: NOSOTROS ------------------------------------------------------------>
@* version1 *@
